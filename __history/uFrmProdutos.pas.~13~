{$R *.dfm}
{ TfrmProdutos }

class procedure TfrmProdutos.Abrir;
begin
  // criei o formulario
  Application.CreateForm(TfrmProdutos, frmProdutos);
  // Chamei o formulario
  frmProdutos.ShowModal;
end;

